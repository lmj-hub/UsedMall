<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.order.dao.OrderDao">

    <insert id="creatOrder" parameterType="order">
        insert into ss_order (buyerId,sellerId,oType,goodsImg,generateDate,status,address,paidAccount,evaluation,phone,receiverName,goodsId,goodsNum,goodsName)
        values (#{buyerId},#{sellerId},#{oType},#{goodsImg},#{generateDate},#{status},#{address},#{paidAccount},#{evaluation},#{phone},#{receiverName},#{goodsId},#{goodsNum},#{goodsName});
    </insert>

    <delete id="deleteOrder" parameterType="int">
        delete from ss_order where orderId = #{oid};
    </delete>

    <update id="updateOrder" parameterType="order">
        update ss_order set
        buyerId=#{buyerId},sellerId=#{sellerId},oType=#{oType},goodsImg=#{goodsImg},generateDate=#{generateDate},status=#{status},address=#{address},paidAccount=#{paidAccount},evaluation=#{evaluation},phone=#{phone},receiverName=#{receiverName},goodsId=#{goodsId},goodsNum={goodsNum},goodsName={goodsName}
        where orderId = #{orderId};
    </update>

    <update id="cancelOrder" parameterType="int">
        update ss_order set
        status="已取消"
        where orderId=#{oid};
    </update>

    <select id="findAll" resultType="order">
        select * from ss_order;
    </select>

    <select id="findByBuyerId" resultType="order">
        select * from ss_order where buyerId=#{buyerId} and oType=#{oType} limit #{startIndex},4;
    </select>

    <select id="findBySellerId" resultType="order">
        select * from ss_order where sellerId=#{sellerId} and oType=#{oType} limit #{startIndex},4;
    </select>

    <select id="countByBuyer" resultType="int">
        select count(*) from ss_order where buyerId=#{buyerId} and oType=#{oType}
    </select>

    <select id="countBySeller" resultType="int">
        select count(*) from ss_order where sellerId=#{sellerId} and oType=#{oType}
    </select>


    <update id="confirmOrder" parameterType="int">
        update ss_order set
            status="已完成"
        where orderId=#{oid};
    </update>

    <update id="refundOrder" parameterType="int">
        update ss_order set
            status="退货中"
        where orderId=#{oid};
    </update>

    <update id="acceptReturn" parameterType="int">
        update ss_order set
            status="已退货"
        where orderId=#{oid};
    </update>

    <update id="sendOrder" parameterType="int">
        update ss_order set
            status="已发货"
        where orderId=#{oid};
    </update>
    <select id="getGoods" resultType="goods">
    	select * from ss_goods where goods_id=#{goodsId}
    </select>
    <select id="getUser" resultType="user">
    	select * from user where id=#{Id}
    </select>
</mapper>
