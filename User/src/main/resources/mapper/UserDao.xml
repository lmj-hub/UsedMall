<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.feng.dao.UserDao">

    <select id="selectUserByUserName" resultType="com.feng.model.User">
        select * from User where username= ${username}
    </select>

    <insert id="insertUser" parameterType="com.feng.model.User">
        insert into User (username,password)
        values (${username},${password})
    </insert>

    <delete id="delUser" parameterType="com.feng.model.User">
        delete from User where username = ${username} and password = ${password}
    </delete>

</mapper>