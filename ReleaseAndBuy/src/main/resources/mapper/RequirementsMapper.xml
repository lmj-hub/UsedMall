<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.gdut.idlegoods.dao.RequirementsDao">
 <insert id="saveRequirements">
 INSERT INTO ss_requirements
 (re_msg, re_date, user_id) 
 VALUES 
 (#{reMsg}, #{reDate}, #{userId})</insert>
 
  <select id="getMyRequirements" resultType="org.gdut.idlegoods.bean.Requirement">
 	select * from ss_requirements where user_id=#{userId}
 </select>
  <select id="getOneRequirement" resultType="org.gdut.idlegoods.bean.Requirement">
 	select * from ss_requirements where re_id=#{reId}
 </select>
 <update id="updateRe">
 	update ss_requirements
 	<trim prefix="set" suffixOverrides=",">
 		<if test="reMsg!=null">
 			re_msg=#{reMsg},
 		</if>
 	</trim>
 	  where re_id = #{reId}
 </update>
 <delete id="delete">
 	delete from ss_requirements where re_id=#{reId}
 </delete>
 <delete id="clearRe">
 	delete from ss_requirements where user_id=#{userId}
 </delete>
</mapper>